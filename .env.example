# ==============================================================
# BridgeShop — Environment Variables
# Copy this file to .env and fill in with real values
# NEVER commit the .env file — it is in .gitignore
# ==============================================================

# ── Application ──────────────────────────────────────────────
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
APP_SECRET=change_me_to_a_secure_random_string_min_64_chars

# ── Database (PostgreSQL) ──────────────────────────────────────
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=159*Alex
DB_NAME=bridgeshop

# ── Redis ─────────────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change_me_redis_password

# ── JWT ──────────────────────────────────────────────────────
JWT_ACCESS_SECRET=change_me_access_secret_min_64_chars
JWT_REFRESH_SECRET=change_me_refresh_secret_min_64_chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ── Session ──────────────────────────────────────────────────
SESSION_SECRET=change_me_session_secret_min_64_chars

# ── Payments — Stripe ─────────────────────────────────────────
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ── Payments — PayPal ─────────────────────────────────────────
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# ── Email — SendGrid ──────────────────────────────────────────
SENDGRID_API_KEY=SG.your_sendgrid_api_key
EMAIL_FROM=noreply@bridgeshop.com
EMAIL_FROM_NAME=BridgeShop

# ── AI Agents — MCP (Phase 4) ─────────────────────────────────
MCP_ENABLED=false
MCP_API_KEY_SALT=change_me_mcp_salt_min_32_chars

# ── File Storage ──────────────────────────────────────────────
# Options: local | s3 | azure
STORAGE_DRIVER=local
# For S3:
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=

# ── CORS ──────────────────────────────────────────────────────
CORS_ORIGIN=http://localhost:3000

# ── Rate Limiting (Phase 3) ───────────────────────────────────
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_CHECKOUT_MAX=10
